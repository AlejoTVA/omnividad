  </div>  <div id="carrito">
    <h2>Carrito de compras</h2>
    <ul id="listaCarrito"></ul>
  </div><a id="whatsapp" href="#" target="_blank">Enviar pedido por WhatsApp</a>

  <script>
    const carrito = [];
    const listaCarrito = document.getElementById('listaCarrito');
    const enlaceWhatsapp = document.getElementById('whatsapp');

    function agregarAlCarrito(producto) {
      carrito.push(producto);
      actualizarCarrito();
    }

    function actualizarCarrito() {
      listaCarrito.innerHTML = '';
      carrito.forEach(item => {
        const li = document.createElement('li');
        li.textContent = item;
        listaCarrito.appendChild(li);
      });
      actualizarEnlaceWhatsapp();
    }

    function actualizarEnlaceWhatsapp() {
      const mensaje = encodeURIComponent(`Hola, quiero pedir: \n${carrito.join('\n')}`);
      enlaceWhatsapp.href = `https://wa.me/5491138977524?text=${mensaje}`;
    }
  </script></body>
